{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "target": "ES2018",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "@styled/typescript-styled-plugin"],
    "paths": {
      "root/*": ["./src/*"]
    }
  },
  "extends": "expo/tsconfig.base"
}
